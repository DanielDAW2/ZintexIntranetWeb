{% extends 'base.html.twig' %}

{% block title %}Proforma{% endblock %}
{% block stylesheets %}
{{ parent() }}

<link href="{{asset('./assets/vendor/select2/select2.min.css')}}" rel="stylesheet" media="all">
{% endblock %}
{% block body %}
    <h1 class="title">Proforma {{ t_fraproforma.numFraprof }}</h1>

    {{ include('t_fraproforma/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('t_fraproforma_index') }}">back to list</a>

    {{ include('t_fraproforma/_delete_form.html.twig') }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{asset("./assets/vendor/select2/select2.min.js")}}"></script>
    <script type="text/javascript">
    $(document).ready(function(){
        $('.selectorProducte').select2({
        minimumInputLength: 3,
        ajax: {
            url: '{{path("t_productes_get_nomprod")|escape("js")}}',
            data: function (params) {
                var query = {
                    nomProd: params.term,
                    type: 'public'
                    
                }
                return query;
            },
        }  
        });
    })
    </script>
    
{% endblock %}
