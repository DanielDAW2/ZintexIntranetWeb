{% extends 'base.html.twig' %}

{% block title %}TProductes{% endblock %}

{% block body %}
    <h1></h1>
<div class="table-data__tool">
        <div class="table-data__tool-left">
            <div class="rs-select2--light rs-select2--lg">    
                <h1 class="title-1">{{ t_producte.nomProdCurt }}</h1>

            </div>

        </div>
        <div class="table-data__tool-right">

        </div>
    </div>
    <div class="row">
        <div class="col"><table class="table">
        <tbody>
            <tr>
                <th>Referencia</th>
                <td>{{ t_producte.refProd }}</td>
            </tr>
            <tr>
                <th>Etiqueta</th>
                <td>{{ t_producte.etiqueta }}</td>
            </tr>
            <tr>
                <th>Producto</th>
                <td>{{ t_producte.nomProd }}</td>
            </tr>
            <tr>
                <th>Nombre Corto</th>
                <td>{{ t_producte.nomProdCurt }}</td>
            </tr>
            <tr>
                <th>Descripción OT</th>
                <td>{{ t_producte.descripot }}</td>
            </tr>
            <tr>
                <th>Descripcion Albaran</th>
                <td>{{ t_producte.descripal }}</td>
            </tr>
            <tr>
                <th>Baja</th>
                <td>{{ t_producte.baixa ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Diseño</th>
                <td>{{ t_producte.disseny ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Producción</th>
                <td>{{ t_producte.produccio ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Foto</th>
                <td>{{ t_producte.foto }}</td>
            </tr>
        </tbody>
    </table></div>
        <div class="col">
        {% if precios %}
        <table class="table">
            <thead>
                <tr>
                    <th>Cantidad</th>
                    <th>Precio</th>
                </tr>
            </thead>
            <tbody>
            {% for precio in precios %}
                <tr>
                    <td>{{ precio.cantidad }}</td>
                    <td>{{ precio.precio }}</td>
                </tr>
            {% endfor %}
        {% else %}
        <p>No se han encontrado precios </p>
        {% endif %}

        </tbody>
    </table></div>
    </div>
    

    <a href="{{ path('t_productes_index') }}">back to list</a>

    <a href="{{ path('t_productes_edit', {'idProd': t_producte.idProd}) }}">edit</a>

    {{ include('t_productes/_delete_form.html.twig') }}
{% endblock %}
